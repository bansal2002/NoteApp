<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutDeleteContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:layout_gravity="center_vertical"
    android:background="@drawable/miscellous_bg">

    <ImageView
        android:id="@+id/imagedelete"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/icon_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="sans-serif-medium"
        android:text="Delete Note"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@id/imagedelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagedelete"
        app:layout_constraintTop_toTopOf="@id/imagedelete" />

    <TextView
        android:id="@+id/instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Are you want to delete note"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="@id/textDelete"
        app:layout_constraintStart_toStartOf="@id/imagedelete"
        app:layout_constraintTop_toBottomOf="@+id/imagedelete"
        />

    <TextView
        android:id="@+id/textDeleteYas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="Delete Note"
        android:textColor="#E30C37"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="@id/instruction"
        app:layout_constraintTop_toBottomOf="@id/instruction" />

    <TextView
        android:id="@+id/textCancleDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="Cancle"
        android:textColor="#F9A825"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/textDeleteYas"
        app:layout_constraintEnd_toStartOf="@id/textDeleteYas"
        app:layout_constraintTop_toTopOf="@id/textDeleteYas" />

</androidx.constraintlayout.widget.ConstraintLayout>