<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutWebUrlDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/_10sdp">


    <ImageView
        android:id="@+id/imageUrl"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/icon_language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAddUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="sans-serif-medium"
        android:text="Add Url"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@id/imageUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageUrl"
        app:layout_constraintTop_toTopOf="@id/imageUrl" />

    <EditText
        android:id="@+id/webUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@null"
        android:fontFamily="sans-serif"
        android:hint="Enter Url"
        android:includeFontPadding="false"
        android:inputType="textUri"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@id/textAddUrl"
        app:layout_constraintStart_toStartOf="@id/imageUrl"
        app:layout_constraintTop_toBottomOf="@id/imageUrl" />

    <TextView
        android:id="@+id/textAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="Add"
        android:textColor="#F9A825"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="@id/webUrl"
        app:layout_constraintTop_toBottomOf="@id/webUrl" />

    <TextView
        android:id="@+id/textCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="Cancle"
        android:textColor="#F9A825"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="@+id/textAdd"
        app:layout_constraintEnd_toStartOf="@id/textAdd"
        app:layout_constraintTop_toTopOf="@id/textAdd" />


</androidx.constraintlayout.widget.ConstraintLayout>